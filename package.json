{
  "name": "ngx-apexcharts-demo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve dev-app",
    "start:doc": "ng serve docs-app",
    "build-pkg": "ng build ngx-apexcharts",
    "build-schematics": "tsc -p ./projects/ngx-apexcharts/schematics/tsconfig.json --outDir dist/ngx-apexcharts/schematics",
    "build": "ng build dev-app && ng build docs-app",
    "test-lib": "ng test",
    "test:lib:ci": "ng test ngx-apexcharts --browsers=ChromeHeadless --watch=false --code-coverage",
    "test-schematics": "ts-node --project ./tsconfig.schematics.json -r tsconfig-paths/register node_modules/jasmine/bin/jasmine.js --config=jasmine.json",
    "test": "yarn test-lib && yarn test-schematics",
    "test:ci": "yarn test:lib:ci && yarn test-schematics",
    "lint": "ng lint ngx-apexcharts && ng lint ngx-apexcharts-demo && ng lint dev-app",
    "lint:fix": "ng lint ngx-apexcharts --fix && ng lint ngx-apexcharts-demo --fix && ng lint dev-app --fix",
    "package": "yarn build-pkg && yarn build-schematics",
    "copyfile:lincense": "copyfiles ./LICENSE ./dist/ngx-apexcharts",
    "copyfile:schema": "copyfiles -f ./projects/ngx-apexcharts/schematics/ng-add/schema.json ./dist/ngx-apexcharts/schematics/ng-add",
    "copyfile:collection": "copyfiles -f ./projects/ngx-apexcharts/schematics/collection.json ./dist/ngx-apexcharts/schematics",
    "copyfile": "yarn copyfile:lincense && yarn copyfile:schema && yarn copyfile:collection",
    "release": "cd ./projects/ngx-apexcharts && standard-version",
    "release:patch": "cd ./projects/ngx-apexcharts && standard-version --release-as patch",
    "release:minor": "cd ./projects/ngx-apexcharts && standard-version --release-as minor",
    "release:major": "cd ./projects/ngx-apexcharts && standard-version --release-as major",
    "publish": "yarn package && yarn copyfile && npm publish dist/ngx-apexcharts/",
    "prepare": "is-ci || husky",
    "serve:ssr:dev-app": "node dist/dev-app/server/server.mjs",
    "serve:ssr:docs-app": "node dist/docs-app/server/server.mjs",
    "build-docs-content": "node --loader ts-node/esm ./tools/markdown-to-html/transform-markdown.mts"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.7",
    "@angular/cdk": "18.2.7",
    "@angular/common": "^18.2.7",
    "@angular/compiler": "^18.2.7",
    "@angular/core": "^18.2.7",
    "@angular/fire": "18.0.1",
    "@angular/forms": "^18.2.7",
    "@angular/material": "18.2.7",
    "@angular/platform-browser": "^18.2.7",
    "@angular/platform-browser-dynamic": "^18.2.7",
    "@angular/platform-server": "^18.2.7",
    "@angular/router": "^18.2.7",
    "@angular/ssr": "^18.2.7",
    "@schematics/angular": "^18.2.7",
    "apexcharts": "3.54.0",
    "express": "^4.21.0",
    "path-normalize": "^6.0.13",
    "rxjs": "~7.8.0",
    "tslib": "2.7.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.7",
    "@angular-devkit/core": "^18.2.7",
    "@angular-eslint/builder": "18.4.0",
    "@angular-eslint/eslint-plugin": "18.4.0",
    "@angular-eslint/eslint-plugin-template": "18.4.0",
    "@angular-eslint/schematics": "18.4.0",
    "@angular-eslint/template-parser": "18.4.0",
    "@angular/cli": "^18.2.7",
    "@angular/compiler-cli": "^18.2.7",
    "@angular/language-service": "^18.2.7",
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.1",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/marked": "^2.0.0",
    "@types/node": "^22.7.9",
    "@typescript-eslint/eslint-plugin": "8.11.0",
    "@typescript-eslint/parser": "8.11.0",
    "copyfiles": "^2.4.1",
    "eslint": "9.12.0",
    "highlight.js": "10",
    "husky": "9.1.6",
    "is-ci": "^3.0.1",
    "jasmine": "5.3.1",
    "jasmine-core": "~5.3.0",
    "jasmine-spec-reporter": "~7.0.0",
    "jasminewd2": "^2.2.0",
    "karma": "6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "^2.1.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "15.2.10",
    "marked": "^2.0.0",
    "ng-packagr": "18.2.1",
    "shelljs": "^0.8.5",
    "standard-version": "^9.3.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.4.5"
  },
  "resolutions": {
    "wrap-ansi": "7.0.0",
    "string-width": "4.2.3"
  }
}
