{
  "name": "ngx-apexcharts-demo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build-pkg": "ng build ngx-apexcharts",
    "build-schematics": "tsc -p ./projects/ngx-apexcharts/schematics/tsconfig.json --outDir dist/ngx-apexcharts/schematics",
    "build": "ng build",
    "test-lib": "ng test",
    "test-schematics": "ts-node --project ./tsconfig.schematics.json -r tsconfig-paths/register node_modules/jasmine/bin/jasmine.js --config=jasmine.json",
    "test": "yarn test-lib && yarn test-schematics",
    "lint": "ng lint ngx-apexcharts && ng lint ngx-apexcharts-demo",
    "package": "yarn build-pkg && yarn build-schematics",
    "copyfile:lincense": "copyfiles ./LICENSE ./dist/ngx-apexcharts",
    "copyfile:schema": "copyfiles -f ./projects/ngx-apexcharts/schematics/ng-add/schema.json ./dist/ngx-apexcharts/schematics/ng-add",
    "copyfile:collection": "copyfiles -f ./projects/ngx-apexcharts/schematics/collection.json ./dist/ngx-apexcharts/schematics",
    "copyfile": "yarn copyfile:lincense && yarn copyfile:schema && yarn copyfile:collection",
    "release": "cd ./projects/ngx-apexcharts && standard-version",
    "release:patch": "cd ./projects/ngx-apexcharts && standard-version --release-as patch",
    "release:minor": "cd ./projects/ngx-apexcharts && standard-version --release-as minor",
    "release:major": "cd ./projects/ngx-apexcharts && standard-version --release-as major",
    "publish": "yarn package && yarn copyfile && npm publish dist/ngx-apexcharts/",
    "prepare": "is-ci || husky install"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.0",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/forms": "^18.0.0",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@schematics/angular": "^18.0.1",
    "apexcharts": "^3.49.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.14.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.0",
    "@angular-devkit/core": "^18.0.0",
    "@angular-eslint/builder": "17.3.0",
    "@angular-eslint/eslint-plugin": "17.3.0",
    "@angular-eslint/eslint-plugin-template": "17.3.0",
    "@angular-eslint/schematics": "17.3.0",
    "@angular-eslint/template-parser": "17.3.0",
    "@angular/cli": "^18.0.0",
    "@angular/compiler-cli": "^18.0.0",
    "@angular/language-service": "^18.0.0",
    "@commitlint/cli": "^19.2.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@types/jasmine": "~5.1.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~20.12.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "husky": "^9.0.0",
    "is-ci": "^3.0.1",
    "jasmine": "^5.1.0",
    "jasmine-core": "~5.1.0",
    "jasmine-spec-reporter": "~7.0.0",
    "jasminewd2": "^2.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "^2.1.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.0.0",
    "ng-packagr": "^18.0.0",
    "standard-version": "^9.3.2",
    "ts-node": "~10.9.0",
    "typescript": "~5.4.5"
  },
  "resolutions": {
    "wrap-ansi": "7.0.0",
    "string-width": "4.1.0"
  }
}
